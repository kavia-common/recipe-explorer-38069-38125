# CI-friendly local defaults to reduce memory and CPU usage for CRA dev server.
# No secrets should be placed here.

# Disable source maps to save memory
GENERATE_SOURCEMAP=false

# Disable fast refresh to reduce overhead in CI-like environments
FAST_REFRESH=false

# Disable heavy polling; rely on native fs events
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Cap Node.js old space size to avoid OOM in constrained containers
NODE_OPTIONS=--max-old-space-size=1024

# Ensure non-interactive CI-like behavior
CI=true

# Host/port for containerized environment
HOST=0.0.0.0
PORT=3000
