# Non-interactive, low-memory defaults for CI and containerized dev server
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce IO/polling overhead
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce memory/CPU
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
NODE_OPTIONS=--max-old-space-size=1024

# Optional health path for healthcheck script (defaults to /)
# REACT_APP_HEALTHCHECK_PATH=/
