# Committed CI/dev defaults (no secrets). Keeps CRA dev server stable and non-interactive.
# Non-interactive server in containers/CI
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce CPU/memory and disable heavy watchers/features by default in CI-like environments
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
FAST_REFRESH=false
GENERATE_SOURCEMAP=false
# Cap Node heap in constrained environments
NODE_OPTIONS=--max-old-space-size=1024

# Optional health path for external health checks (hits CRA root by default)
REACT_APP_HEALTHCHECK_PATH=/
