# Committed defaults for non-interactive, low-memory dev server runs.
# No secrets included. These values can be overridden by orchestrator or user env.

# Non-interactive browser/host/port
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# CI-friendly, reduce overhead
CI=true
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node heap to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path for healthcheck.js (defaults to "/")
# REACT_APP_HEALTHCHECK_PATH=/
