# Committed non-secret defaults for CI/stable dev runs.
# These reduce memory/CPU footprint and prevent interactive prompts.

# Non-interactive container-friendly defaults
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Lower resource usage
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node memory to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path
REACT_APP_HEALTHCHECK_PATH=/
