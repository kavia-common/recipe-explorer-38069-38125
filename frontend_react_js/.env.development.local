# Reduce memory and CPU footprint in CI-like environments
# Do not put secrets here; this file is committed intentionally to control CRA dev server behavior.

# Disable heavy file-watcher polling
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Disable fast refresh overhead
FAST_REFRESH=false

# Disable source maps to save memory
GENERATE_SOURCEMAP=false

# Cap Node memory to avoid OOM (CRA respects NODE_OPTIONS)
NODE_OPTIONS=--max-old-space-size=1024

# Bind to container-friendly host and default port
HOST=0.0.0.0
PORT=3000

# Keep CRA in CI mode to avoid interactive prompts
CI=true

# Prevent browser auto-open
BROWSER=none
