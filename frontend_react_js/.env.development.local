# Non-sensitive defaults for CI/dev server stability
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce watcher overhead
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Keep builds fast and lean in CI/dev
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node memory to avoid exit 137 (OOM)
NODE_OPTIONS=--max-old-space-size=1024

# Optional: healthcheck path (used by healthcheck.js if set at runtime)
# REACT_APP_HEALTHCHECK_PATH=/
