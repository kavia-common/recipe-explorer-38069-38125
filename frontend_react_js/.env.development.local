# Committed CI/dev defaults for non-interactive, low-resource environments
# These are safe, non-secret values used to stabilize CRA dev server in CI.
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Disable heavy polling to reduce CPU in containers/CI
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Keep bundles light and avoid memory overhead
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node.js old space to avoid OOM and exit 137 in constrained CI
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path for the healthcheck script and wrapper
# REACT_APP_HEALTHCHECK_PATH=/
