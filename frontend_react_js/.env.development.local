# Non-interactive, low-resource defaults for CRA dev server in CI and containers.
# These are safe defaults and DO NOT include any secrets.

# Prevent CRA from attempting to open a browser
BROWSER=none

# Bind to all interfaces for container access
HOST=0.0.0.0

# Default dev server port; start-noninteractive will pick a free one if needed
PORT=3000
REACT_APP_PORT=3000

# CI-like behavior
CI=true

# Reduce resource usage to mitigate OOM (exit 137) in constrained CI
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node memory to avoid OOM
NODE_OPTIONS=--max-old-space-size=1024
