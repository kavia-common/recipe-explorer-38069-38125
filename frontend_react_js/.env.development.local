# Non-secret defaults for CI/dev to ensure non-interactive stable startup
BROWSER=none
HOST=0.0.0.0
PORT=3000
CI=true

# Avoid heavy polling in container/CI environments
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce memory/CPU footprint and avoid sourcemaps in dev
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node memory to avoid OOM kills (137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional app port variable for awareness; CRA uses PORT above
REACT_APP_PORT=3000
