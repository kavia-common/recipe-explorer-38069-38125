# Non-interactive, low-memory, CI-friendly defaults
# Do not put secrets here.

# Avoid heavy polling to reduce CPU usage in CI/container
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce memory by disabling source maps and fast refresh
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node memory to avoid OOM (exit 137) in constrained environments
NODE_OPTIONS=--max-old-space-size=1024

# Container-friendly host/port, CI non-interactive, no browser launch
HOST=0.0.0.0
PORT=3000
CI=true
BROWSER=none
