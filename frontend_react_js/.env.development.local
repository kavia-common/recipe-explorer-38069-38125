# Non-interactive CI/development defaults for stable CRA dev server
# Do not include secrets here.

# Bind settings for containers
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
BROWSER=none

# CI mode
CI=true

# Reduce watcher CPU load
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Disable source maps to reduce memory
GENERATE_SOURCEMAP=false

# Disable fast refresh in CI to reduce overhead
FAST_REFRESH=false

# Cap Node heap to avoid OOM (exit 137) in constrained environments
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path (dev server serves '/')
REACT_APP_HEALTHCHECK_PATH=/
