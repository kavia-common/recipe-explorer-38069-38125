# CI-friendly defaults for CRA dev server
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce file watching overhead
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Disable heavy features for low-memory CI environments
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node.js heap to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path used by healthcheck.js
REACT_APP_HEALTHCHECK_PATH=/
