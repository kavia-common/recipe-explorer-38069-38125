# Non-interactive, CI-friendly defaults for CRA dev server
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Disable heavy file system polling for reduced CPU
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce memory/CPU usage
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
# Cap Node.js memory to avoid OOM (exit 137) in constrained CI environments
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path when serving app; can be overridden by orchestrator
REACT_APP_HEALTHCHECK_PATH=/
