# CI- and container-friendly defaults to keep resource usage low and avoid interactive prompts.

# Do not open a browser
BROWSER=none

# Bind to all interfaces for container access
HOST=0.0.0.0

# Default port (start-noninteractive picks a free port around this)
PORT=3000

# Ensure non-interactive behavior in CI
CI=true

# Disable heavy file watcher polling
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Keep builds and dev server lightweight
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node memory to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional: explicitly set React app port for consistency
REACT_APP_PORT=3000
