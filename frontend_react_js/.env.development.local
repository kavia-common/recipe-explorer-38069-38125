# Committed CI/dev defaults - no secrets here. Used to ensure non-interactive, low-resource startup.
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Disable heavy polling and extra tooling in CI
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
FAST_REFRESH=false
GENERATE_SOURCEMAP=false

# Cap Node heap to reduce OOM risks in constrained CI environments
NODE_OPTIONS=--max-old-space-size=1024

# Optional: health check path for readiness checks (served by CRA)
REACT_APP_HEALTHCHECK_PATH=/
