# Reduce resource usage and avoid interactive prompts in CI/dev server
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
# Cap Node memory to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024
# Non-interactive defaults for containerized environments
HOST=0.0.0.0
PORT=3000
CI=true
BROWSER=none
