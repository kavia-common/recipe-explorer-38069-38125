# CI-friendly defaults to keep CRA dev server lightweight and non-interactive
BROWSER=none
HOST=0.0.0.0
PORT=3000
CI=true

# Avoid heavy file watching
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Keep bundle small and save memory in CI
GENERATE_SOURCEMAP=false

# Disable fast refresh overhead in CI-like environments
FAST_REFRESH=false

# Cap Node memory to avoid exit 137 (OOM) in constrained runners
NODE_OPTIONS=--max-old-space-size=1024

# Optional explicit app port used by wrapper
REACT_APP_PORT=3000
