# CI/non-interactive defaults to avoid OOM and prompts
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce resource usage
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node heap to avoid exit 137 (OOM) in constrained CI
NODE_OPTIONS=--max-old-space-size=1024

# Optional: healthcheck path for healthcheck.js script
REACT_APP_HEALTHCHECK_PATH=/
