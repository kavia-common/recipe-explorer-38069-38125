# Local/CI development defaults to reduce memory and CPU
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
# Cap Node memory (adjustable via NODE_OPTIONS in orchestrator if needed)
NODE_OPTIONS=--max-old-space-size=1024
# Non-interactive defaults for containers
HOST=0.0.0.0
PORT=3000
CI=true
BROWSER=none
