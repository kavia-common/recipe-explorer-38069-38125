# Committed for CI-friendly, low-memory dev server defaults
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Avoid heavy file watcher polling in containers/CI
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce memory and CPU usage
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
# Cap Node heap to avoid OOM exit 137
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path
REACT_APP_HEALTHCHECK_PATH=/
