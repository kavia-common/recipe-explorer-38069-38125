# PUBLIC_INTERFACE
# Non-interactive, low-memory defaults for CI/containerized development.
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# File watching optimizations
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce build overhead
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap node memory to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path for the dev server if needed by CI
REACT_APP_HEALTHCHECK_PATH=/
