# Reduce dev server CPU/memory footprint in CI-like environments
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
# Cap Node memory to avoid OOM in constrained containers
NODE_OPTIONS=--max-old-space-size=1024
# Non-interactive container defaults
HOST=0.0.0.0
PORT=3000
CI=true
BROWSER=none
