# CI-friendly defaults to keep dev server lightweight and non-interactive.
# No secrets included. Do not commit a .env file with secrets.

# Avoid CRA opening browser or prompting
BROWSER=none
HOST=0.0.0.0
PORT=3000
CI=true

# Reduce watcher CPU usage and memory
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce memory footprint and build size
GENERATE_SOURCEMAP=false

# Disable fast refresh in CI-like environments
FAST_REFRESH=false

# Cap Node memory usage to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional: provide REACT_APP_PORT to align with orchestrator variable names
REACT_APP_PORT=3000
