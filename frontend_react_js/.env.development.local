# Non-interactive CI-friendly defaults for CRA dev server
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Disable heavy file watcher polling
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Keep builds lean
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Avoid OOM in constrained environments
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path used by healthcheck.js
REACT_APP_HEALTHCHECK_PATH=/
