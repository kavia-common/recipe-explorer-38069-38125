# CI-friendly defaults for Create React App dev server.
# These vars are non-sensitive and safe to commit.

# Non-interactive dev server defaults
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce resource usage to avoid OOM (exit 137)
# Cap Node heap to 1GB unless overridden
NODE_OPTIONS=--max-old-space-size=1024

# Disable sourcemaps and fast refresh to reduce CPU/memory in CI
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Avoid heavy file watcher polling in containers/CI
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Optional healthcheck path
# HEALTHCHECK_PATH=/
# REACT_APP_HEALTHCHECK_PATH=/
