# Committed safe defaults for CI and local dev (no secrets)
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
# Cap Node memory to avoid OOM (exit 137) in constrained CI
NODE_OPTIONS=--max-old-space-size=1024
# Healthcheck path for simple readiness checks
REACT_APP_HEALTHCHECK_PATH=/
