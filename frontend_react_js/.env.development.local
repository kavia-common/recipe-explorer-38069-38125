# CI-friendly, non-interactive defaults to prevent OOM/port prompts
BROWSER=none
HOST=0.0.0.0
PORT=3000
CI=true

# Avoid heavy file watcher polling
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce memory and build footprint
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node memory to prevent exit 137 (OOM) in constrained runners
NODE_OPTIONS=--max-old-space-size=1024

# Optional: map app port
REACT_APP_PORT=3000
