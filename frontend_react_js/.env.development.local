# CI-friendly defaults (no secrets)
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce resource usage (prevent exit 137 due to OOM)
NODE_OPTIONS=--max-old-space-size=1024
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Disable heavy polling in container/CI
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Optional health endpoint path for healthcheck script
REACT_APP_HEALTHCHECK_PATH=/
