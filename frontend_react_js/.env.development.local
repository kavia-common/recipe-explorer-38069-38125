# PUBLIC_INTERFACE
# Non-interactive, low-resource defaults for dev server in CI.
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Avoid heavy file watcher polling and fast refresh
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
FAST_REFRESH=false

# Keep memory usage low and avoid sourcemaps to reduce CPU
GENERATE_SOURCEMAP=false
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path for readiness probe
REACT_APP_HEALTHCHECK_PATH=/
