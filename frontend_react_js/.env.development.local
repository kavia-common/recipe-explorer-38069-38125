# Non-secret local/CI defaults to minimize memory and disable heavy features
# These values are safe for CI and containerized dev; secrets must be provided via orchestrator .env

# Reduce CPU/memory usage for file watching and HMR
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
FAST_REFRESH=false
GENERATE_SOURCEMAP=false

# Cap Node memory usage to avoid OOM kills (code 137)
NODE_OPTIONS=--max-old-space-size=1024

# Non-interactive server defaults
HOST=0.0.0.0
PORT=3000
CI=true
BROWSER=none
