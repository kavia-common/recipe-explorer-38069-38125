# Non-interactive, low-resource defaults for CI/dev server
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Disable heavy file watching/polling to reduce CPU/memory
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Reduce build overhead
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node heap to avoid OOM (exit 137) in constrained environments
NODE_OPTIONS=--max-old-space-size=1024

# Optional: healthcheck path if needed by CI
# REACT_APP_HEALTHCHECK_PATH=/
