# Non-interactive, low-resource defaults for CRA dev server in CI/local
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce CPU/memory usage
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node heap to avoid OOM (exit 137) on constrained CI
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path used by healthcheck.js
REACT_APP_HEALTHCHECK_PATH=/
