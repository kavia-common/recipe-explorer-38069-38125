# CI-friendly, non-interactive defaults for CRA dev server
# No secrets should be placed here.

# Do not launch a browser in containerized CI
BROWSER=none

# Bind to all interfaces for containerized environment
HOST=0.0.0.0

# Default port; start-noninteractive selects a free port if busy
PORT=3000

# CI mode disables prompts and fast refresh
CI=true
FAST_REFRESH=false

# Reduce resource usage to avoid OOM (exit 137)
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
NODE_OPTIONS=--max-old-space-size=1024

# Optional: ensure app-level port alignment
REACT_APP_PORT=3000

# Optional healthcheck path for the app (root by default)
REACT_APP_HEALTHCHECK_PATH=/
