# Non-interactive and low-resource defaults for CI and containers
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce file watching overhead
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Disable sourcemaps to reduce memory/CPU
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap node memory to avoid OOM (exit 137) in constrained envs
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path for healthcheck.js
REACT_APP_HEALTHCHECK_PATH=/
