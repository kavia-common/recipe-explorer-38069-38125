# CI/dev server defaults to keep resource usage low and avoid interactive prompts
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap node memory to reduce chances of OOM (which can cause exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Force non-interactive host/port and browser behavior in containerized CI
HOST=0.0.0.0
PORT=3000
CI=true
BROWSER=none
