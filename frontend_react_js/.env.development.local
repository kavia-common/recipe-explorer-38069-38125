# CI-friendly defaults for development server (non-interactive, low memory)
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# CI behaviors
CI=true

# Reduce file watching overhead in containers/CI
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Disable heavy features to minimize CPU/memory
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node heap to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=1024

# Optional health check path (defaults to /)
# REACT_APP_HEALTHCHECK_PATH=/
