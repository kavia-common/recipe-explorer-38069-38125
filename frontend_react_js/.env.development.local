# Reduce memory usage and avoid heavy polling in CI-like environments
GENERATE_SOURCEMAP=false
# Disable file watcher polling (use native watchers)
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
# Further constrain Node memory; package.json also caps it but this helps when scripts are overridden
NODE_OPTIONS=--max-old-space-size=1024
# Silence eslint overlay to reduce noise
EXTEND_ESLINT=true
