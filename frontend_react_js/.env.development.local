# CI/non-interactive friendly defaults for CRA dev server
# Do not put secrets here.

# Do not auto-open browser and bind to all interfaces for containerized envs
BROWSER=none
HOST=0.0.0.0

# Port and React exposed port (some orchestrators only read one)
PORT=3000
REACT_APP_PORT=3000

# CI true disables interactive prompts
CI=true

# Reduce resource usage to avoid OOM (exit 137)
# If NODE_OPTIONS is provided externally it will take precedence in start script
NODE_OPTIONS=--max-old-space-size=1024

# Disable heavy filesystem polling
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Disable sourcemaps to reduce memory/CPU
GENERATE_SOURCEMAP=false

# Disable fast refresh in CI-like environments
FAST_REFRESH=false

# Optional healthcheck path used by healthcheck.js (defaults to "/")
# REACT_APP_HEALTHCHECK_PATH=/
