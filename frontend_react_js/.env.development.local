# Committed CI-friendly defaults for development and CI runs.
# These contain no secrets.
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce filesystem watcher load
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Keep builds and runtime lean in CI
GENERATE_SOURCEMAP=false
FAST_REFRESH=false

# Cap Node heap to avoid OOM in constrained CI
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path (defaults to "/")
# REACT_APP_HEALTHCHECK_PATH=/
