# Non-sensitive CI/dev defaults to ensure stable, low-resource startup for CRA dev server
# Do not put secrets here. This file is intentionally committed.

# Bindings and non-interactive behavior
BROWSER=none
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
CI=true

# Reduce CPU/memory watchers & features
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
FAST_REFRESH=false
GENERATE_SOURCEMAP=false

# Cap Node heap to mitigate exit 137 in constrained environments
NODE_OPTIONS=--max-old-space-size=1024

# Optional healthcheck path
REACT_APP_HEALTHCHECK_PATH=/

# Example feature flags (safe defaults)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=false
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false
